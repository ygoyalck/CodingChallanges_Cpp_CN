// arr - input array
// n - size of array

void sort012(int arr[], int n)  {  
    int z=0;
  int o=0;
  int t=0;
  for(int i=0;i<n;i++)
  {
    if(arr[i]==0)
    {
      z++;
    }
    else if(arr[i]==1)
    {
      o++;
    }
    else
      t++;
  }
  int k;
  for(k=0;k<z;k++)
    arr[k]=0;
  for(k=z;k<z+o;k++)
    arr[k]=1;
  for(k=z+o;k<z+o+t;k++)
    arr[k]=2;

}
